<?xml version="1.0" encoding="utf-8"?>

<talex.zsw.basecore.view.other.swipetoloadlayout.footer.ClassicLoadMoreFooterView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/load_more_footer_height_classic">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@+id/tvLoadMore"/>

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@+id/tvLoadMore"
            android:background="@mipmap/qq_refresh_success"/>

        <TextView
            android:id="@+id/tvLoadMore"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="加载更多..."
            android:textColor="#333"/>
    </RelativeLayout>
</talex.zsw.basecore.view.other.swipetoloadlayout.footer.ClassicLoadMoreFooterView>